{
    "compilerOptions": {
        "outDir": "lib",
        "baseUrl": ".",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "target": "esnext",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "declaration": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "webpack-env",
            "src/types"
        ],
        "paths": {
            "react": [".sink.d.ts"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "**/*.stories.ts"
    ]
}
